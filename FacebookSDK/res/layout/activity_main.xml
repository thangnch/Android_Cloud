<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Đăng nhập facebook" />

    <Button
        android:id="@+id/btnLoginFb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login FaceBook"
        android:onClick="loginFaceBook"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnShareFacebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Share Link 2 FaceBook"
        android:onClick="shareFaceBook"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Logout FaceBook"
        android:onClick="logout"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgAvatar"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

</LinearLayout>